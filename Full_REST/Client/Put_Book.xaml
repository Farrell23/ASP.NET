<Window x:Class="Client.Put_Book"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Put_A_Book" Height="182.72" Width="269.405">
    <StackPanel>
        <TextBox x:Name="bid" HorizontalAlignment="Right" Width="150" Height="20" Margin="0,5,5,5" Text="" TextAlignment="Center" TextChanged="Get_Book_By_Id"/>
        <TextBox x:Name="bname" HorizontalAlignment="Right" Width="150" Height="20" Margin="5 5 5 5" Text="Book name" TextAlignment="Center"/>
        <TextBox x:Name="bauthor" HorizontalAlignment="Right" Width="150" Height="20" Margin="5 5 5 5" Text="Book author" TextAlignment="Center"/>
        <TextBox x:Name="bpublish" HorizontalAlignment="Right"  Width="150" Height="20" Margin="5 5 5 5" Text="Publish date" TextAlignment="Center"/>
        <Button Click="Put_A_Book" Content="PUT" Width="50" HorizontalAlignment="Center" Margin="104,0"/>
    </StackPanel>
</Window>
